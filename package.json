{
    "name": "gitlab-mr",
    "displayName": "Gitlab MR",
    "description": "Manage MRs in Gitlab from VS Code",
    "version": "1.4.0",
    "publisher": "jasonn-porch",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.openMR",
        "onCommand:extension.viewMR",
        "onCommand:extension.checkoutMR",
        "onCommand:extension.editMR"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openMR",
                "title": "Gitlab MR: Create MR"
            },
            {
                "command": "extension.viewMR",
                "title": "Gitlab MR: View MR"
            },
            {
                "command": "extension.checkoutMR",
                "title": "Gitlab MR: Checkout MR"
            },
            {
                "command": "extension.editMR",
                "title": "Gitlab MR: Edit MR"
            }
        ],
        "keybindings": [
            {
                "command": "extension.openMR",
                "key": "ctrl+k ctrl+m",
                "mac": "cmd+k cmd+m",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.viewMR",
                "key": "ctrl+k ctrl+v",
                "mac": "cmd+k cmd+v",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.checkoutMR",
                "key": "ctrl+k ctrl+b",
                "mac": "cmd+k cmd+b",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "Gitlab MR",
            "properties": {
                "gitlab-mr.accessTokens": {
                    "type": "object",
                    "default": null,
                    "description": "Key/value pairs of Gitlab Server URLs and Gitlab Access Tokens."
                },
                "gitlab-mr.accessToken": {
                    "type": "string",
                    "default": null,
                    "description": "Gitlab Access Token for https://gitlab.com. Use gitlab-mr.accessTokens for CE/EE servers."
                },
                "gitlab-mr.targetBranch": {
                    "type": "string",
                    "default": "master",
                    "description": "Target branch for MRs."
                },
                "gitlab-mr.targetRemote": {
                    "type": "string",
                    "default": "origin",
                    "description": "Git remote to push to."
                },
                "gitlab-mr.autoOpenMr": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically open a new MR."
                },
                "gitlab-mr.removeSourceBranch": {
                    "type": "boolean",
                    "default": false,
                    "description": "Remove source branch after merging."
                },
                "gitlab-mr.useDefaultBranch": {
                    "type": "boolean",
                    "default": false,
                    "description": "When creating MRs, use default_branch set in repository as target branch."
                },
                "gitlab-mr.apiVersion": {
                    "type": "string",
                    "default": "v4",
                    "description": "Gitlab API version, e.g. v4."
                },
                "gitlab-mr.openToEdit": {
                    "type": "boolean",
                    "default": false,
                    "description": "Open a new MR to the edit screen after creation."
                },
                "gitlab-mr.autoCommitChanges": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto-commit current changes when creating an MR"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "lint": "eslint .",
        "test": "mocha",
        "package": "vsce package -o ./bin/vscode-gitlab-mr.vsix --baseContentUrl https://gitlab.com/jasonnutter/vscode-gitlab-mr/tree/master --baseImagesUrl https://gitlab.com/jasonnutter/vscode-gitlab-mr/raw/master"
    },
    "pre-commit": [
        "lint",
        "test"
    ],
    "devDependencies": {
        "@types/chai": "^3.4.35",
        "@types/mocha": "^2.2.39",
        "@types/node": "^6.0.63",
        "chai": "^3.5.0",
        "eslint": "^4.19.1",
        "mocha": "^3.2.0",
        "pre-commit": "^1.2.2",
        "typescript": "^2.2.1",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "lodash.trimstart": "^4.5.1",
        "opn": "^4.0.2",
        "request": "^2.87.0",
        "request-promise": "^4.2.2",
        "simple-git": "^1.66.0",
        "ssh-parse": "^1.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/jasonnutter/vscode-gitlab-mr"
    },
    "icon": "img/gitlab-logo.png"
}
