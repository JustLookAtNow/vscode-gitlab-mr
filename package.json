{
  "name": "gitlab-mr",
  "displayName": "Gitlab MR",
  "description": "Manage MRs in Gitlab from VS Code",
  "version": "1.0.0",
  "publisher": "jasonn-porch",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.openMR"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.openMR",
        "title": "Gitlab MR: Open MR"
      }
    ],
    "keybindings": [
      {
        "command": "extension.openMR",
        "key": "ctrl+k ctrl+m",
        "mac": "cmd+k cmd+m",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Gitlab MR",
      "properties": {
        "gitlab-mr.accessTokens": {
          "type": "object",
          "default": null,
          "description": "Key/value pairs of Gitlab Server URLs and Gitlab Access Tokens."
        },
        "gitlab-mr.accessToken": {
          "type": "string",
          "default": null,
          "description": "Gitlab Access Token for https://gitlab.com. Use gitlab-mr.accessTokens for CE/EE servers."
        },
        "gitlab-mr.targetBranch": {
          "type": "string",
          "default": "master",
          "description": "Target branch for MRs."
        },
        "gitlab-mr.targetRemote": {
          "type": "string",
          "default": "origin",
          "description": "Git remote to push to."
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "lint": "eslint ."
  },
  "devDependencies": {
    "typescript": "^2.0.3",
    "vscode": "^1.0.0",
    "mocha": "^2.3.3",
    "eslint": "^3.6.0",
    "@types/node": "^6.0.40",
    "@types/mocha": "^2.2.32"
  },
  "dependencies": {
    "gitlab": "^1.7.1",
    "opn": "^4.0.2",
    "q": "^1.4.1",
    "simple-git": "^1.53.0"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.porch.com/jasonn/vscode-gitlab-mr"
  }
}
